<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(user){ %>
          <span class="navbar-brand" style="font-size:14.2pt">Logged In As <%= user.email %></span>
          <form method="POST" action= "/logout">
            <button class="btn btn-primary" type="submit">Log Out</button>
          </form> 
        <% } else{ %>
        <form method="GET" action= "/register" >
          <button class="btn btn-primary" type="submit" style="width: 100px; margin-right: 1em; margin-left: 1em">Register</button>
        </form>
        <form method="GET" action= "/login" >
          <button class="btn btn-primary" type="submit" style="width: 100px">Login</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>